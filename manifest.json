{
  "id": "plugin-external-push",
  "displayName": "External Push",
  "description": "Publisher which connects to allows data to be pushed into the system",
  "apiVersion": "2",
  "versionDescription": "Version 1",
  "version": "1.0.0",
  "iconFile": "icon.png",
  "executable": "PluginExternalPush",
  "kind": "publisher",
  "os": "$GOOS",
  "arch": "$GOARCH",
  "accessGroups": [],
  "canConfigure": false,
  "canProduceMultipleSchemas": false,
  "canAcceptQueryBasedSchemas": false,
  "canUseOAuth": false,
  "canConfigureWrite": false,
  "canWrite": false,
  "canConfigureReplication": false,
  "canWriteReplication": false,
  "canConfigureRealTime": true,
  "querySchema": {
    "ui": {
      "ui:widget": "code",
      "ui:options": {
        "language": "sql"
      }
    },
    "schema": {
      "type": "string"
    }
  },
  "configSchema": {
    "ui": {
      "ui:order": [
        "port",
        "tokenValidationEndpoint",
        "inputSchema"
      ]
    },
    "schema": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "title": "Port"
        },
        "tokenValidationEndpoint": {
          "type": "string",
          "title": "Token Validation Endpoint"
        },
        "inputSchema": {
          "type": "array",
          "title": "Input Schema",
          "items": {
            "type": "object",
            "properties": {
              "propertyName": {
                "type": "string",
                "title": "Property Name"
              },
              "propertyType": {
                "type": "string",
                "title": "Property Type",
                "enum": [
                  "String",
                  "Integer",
                  "Float",
                  "Boolean",
                  "Date Time",
                  "JSON"
                ]
              }
            }
          }
        }
      },
      "required": [
        "port",
        "inputSchema"
      ]
    }
  }
}